<settings>
  <profiles>
    <profile>
      <id>it-repo</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <repositories>
        <repository>
          <id>local.central</id>
          <url>@localRepositoryUrl@</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>local.central</id>
          <url>@localRepositoryUrl@</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
  
  <servers>
    <server>
      <id>serverId</id>
      <username>ituser</username>
      <password>itpassword</password>
      <configuration>
        <url>http://localhost:@wiremockPort@/deploy</url>
        <cicsplexName>cicsplex</cicsplexName>
        <regionName>region</regionName>
      </configuration>
    </server>
    <server>
      <id>invalidURL</id>
      <username>ituser</username>
      <password>itpassword</password>
      <configuration>
        <url>http://invalid:8080/deploy</url>
        <cicsplexName>cicsplex</cicsplexName>
        <regionName>region</regionName>
      </configuration>
    </server>
  </servers>	
</settings>
